{
    "extends": "airbnb",
    "parser": "babel-eslint",
    "env": {
      "browser": true,
      "node": true,
      "mocha": true
     },
     "ecmaFeatures": {
      "jsx": true,
      "es6": true,
      "classes": true
     },
     "rules": {
       "comma-dangle" : [1, "never"],
       "no-unused-vars" : [1],
       "max-len" : [1, 180, 4],
       "key-spacing" : [2,{"mode": "minimum"}],
       "arrow-spacing" : [1],
       "prefer-template" : [1],
       "prefer-const" : [1],
       "arrow-body-style": [0],
       "no-console" : [1],
       "no-else-return" : [1],
       "no-extra-semi": [1],
       "object-shorthand": [1, "properties"],
       "semi" : [1],
       "no-trailing-spaces" : [1, {"skipBlankLines":true}],
       "object-curly-spacing":[0]
     }
  }